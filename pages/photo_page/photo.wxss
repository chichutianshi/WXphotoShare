page {
  background-color: rgb(233, 233, 233);
  width: 100%;
  height: 100%;
}

.whole {
  width: 100%;
  height: 100%;
}

.picture {
  width: 100%;
  height: 90%;
  /* background-color: rgb(121, 121, 121); */
  background-color: rgb(0, 0, 0);
  /* border: 1px solid red; */
}

.swipe_container {
  width: 100%;
  height: 100%;
}

.slide-image {
  width: 100%;
  height: 100%;
}

.show_message {
  background-color: white;
  width: 100%;
  height: auto;
  margin-top: -3%;
  /* border: 1rpx solid rgb(223, 21, 21); */
}

.show_message text{
  font-size: 35rpx;
  color: gray;
}

.outline {
  /* border: 1rpx solid yellow; */
  width: 90%;
  height: 20%;
  margin-left: 5%;
  margin-top: 3%;
  position: relative;
}

.outline text{
  word-break: break-all;
  word-wrap: break-word;
}

.location_ {
  /* border: 1px solid red; */
  width: 92%;
  height: auto;
  margin-top: 2%;
  margin-left: 4%;
  margin-right: 4%;
  display: flex;
}

.location_ text{
  word-break: break-all;
  word-wrap: break-word;
}

.locaContent{
  /* border: 1px solid red; */
  width: 80%;
}

.author {
  display: flex;
  align-items: center;
  border-bottom: 1px solid #ccc;
  width: 96%;
  margin: 0 2%;
  /* border: 1rpx solid rgb(69, 84, 224); */
}

.photo {
  width: 80rpx;
  height: 80rpx;
  margin-top: 3%;
  margin-bottom: 3%;
  margin-left: 4%;
  /* border: 1rpx solid rgb(197, 180, 104); */
  border-radius: 50rpx;
}

.nickname {
  margin-left: 4%;
  /* border: 1px solid blue; */
  width: 80%;
}

.photoName {
  /* border: 1px solid red; */
  display: flex;
  align-items: center;
  width: 80%;
}

.low_bar {
  width: 100%;
  height: 10%;
  display: flex;
  align-items: center;
  position: fixed;
  bottom: 0;
  background-color: white;
  /* border: 1px solid blue; */
}

.comments_ {
  width: 50%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  /* border: 1px solid blue; */
}

.comments_icon{
  width: 50rpx;
  height: 45rpx;
}

.share_ {
  width: 50%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  /* border: 1px solid blue; */
}

.share_icon{
  width: 50rpx;
  height: 50rpx;
}

.heart_ {
  width: 50%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.heart_icon{
  width: 50rpx;
  height: 45rpx;
}